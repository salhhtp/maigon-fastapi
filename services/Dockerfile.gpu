FROM nvidia/cuda:11.8.0-runtime-ubuntu22.04
RUN apt-get update && apt-get install -y python3 python3-pip && rm -rf /var/lib/apt/lists/*
WORKDIR /app
COPY common /app/common
COPY services /app/services
RUN pip3 install --no-cache-dir fastapi uvicorn gunicorn requests
ENV PYTHONPATH=/app
CMD ["bash","-lc","gunicorn -k uvicorn.workers.UvicornWorker services.dpa.app:app --bind 0.0.0.0:80"]
